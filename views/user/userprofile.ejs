<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.3/font/bootstrap-icons.min.css" rel="stylesheet">
  <%- include("../../views/partials/user/headerNew") %>

  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Arial', sans-serif;
    }

    .profile-container {
      max-width: 600px;
      margin: 60px auto;
      padding: 20px;
      background-color: #ffffff;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
    }

    .profile-header {
      text-align: center;
      margin-bottom: 20px;
    }

    .profile-header i {
      font-size: 6rem;
      color: #0d6efd;
    }

    .profile-header h3 {
      margin-top: 10px;
      font-weight: bold;
      color: #333;
    }

    .profile-header p {
      color: #777;
    }

    .profile-details {
      margin-top: 20px;
      padding: 10px 20px;
    }

    .profile-details h5 {
      font-size: 18px;
      font-weight: bold;
      color: #0d6efd;
    }

    .profile-details p {
      margin-bottom: 5px;
      color: #555;
    }

    .profile-details .info-item {
      margin-bottom: 15px;
    }

    .edit-profile {
      text-align: center;
      margin-top: 15px;
    }

    .edit-profile a {
      text-decoration: none;
      font-weight: bold;
      color: #0d6efd;
    }

    .edit-profile a:hover {
      text-decoration: underline;
    }

    .referral-section {
      margin-top: 20px;
      padding: 15px;
      border: 1px solid #dcdcdc;
      border-radius: 8px;
      background-color: #f9f9f9;
      text-align: center;
    }

    .referral-section h6 {
      font-size: 16px;
      font-weight: bold;
      color: #333;
      margin-bottom: 5px;
    }

    .referral-section p {
      font-size: 14px;
      color: #555;
      margin-bottom: 10px;
    }

    .referral-code {
      display: inline-block;
      padding: 8px 15px;
      font-size: 14px;
      font-weight: bold;
      color: #0d6efd;
      border: 1px solid #0d6efd;
      border-radius: 5px;
      cursor: pointer;
      background-color: #f8f9fa;
    }

    .referral-code:hover {
      background-color: #e8f0fe;
    }
  </style>
</head>
<body>
  <%- include("../../views/partials/user/headerNew") %>

  <div class="profile-container" style="margin-top: 150px;">
    <!-- Profile Header -->
    <div class="profile-header">
      <i class="bi bi-person-circle"></i>
      <h3><%= user.name %></h3>
      <p><%= user.email %></p>
    </div>

    <!-- Profile Details -->
    <div class="profile-details">
      <div class="info-item">
        <h5>Phone</h5>
        <p><%= user.phone %></p>
      </div>
      <div class="info-item">
        <h5>Password</h5>
        <p><a href="/user/changePassword" class="text-primary">Change Password</a></p>
      </div>
    </div>

    <!-- Edit Profile -->
    <div class="edit-profile">
      <a style="color: #0d6efd;" href="/user/editUser?id=<%= user._id %>" ><i class="bi bi-pencil-fill" style="color: #0d6efd;"></i> Edit Profile</a>
    </div>

    <!-- Referral Section -->
    <div class="referral-section">
      <h6>Share & Earn</h6>
      <p>Share your referral link and earn â‚¹100 in your wallet!</p>
      <div class="referral-code">
        <i class="bi bi-clipboard"></i> <%= user.referralCode %>
      </div>
    </div>
  </div>

  <%- include("../../views/partials/user/footer") %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
