

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container">
    <h1 class="text-center mb-5">Order Details</h1>

    <div class="order-details card p-4">
        <h5>Order ID: <%= order._id %></h5>
        <p>Status: <span class="badge <%= order.status === 'Pending' ? 'bg-warning' : 'bg-success' %>"><%= order.status %></span></p>
        <p>Placed on: <%= order.createdAtFormatted %></p>
        
        <h6>Delivery Address:</h6>
        <p>
            <%= order.address.name %>,
             <%= order.address.city %>,
              <%= order.address.state %> -
               <%= order.address.pincode %>
            </p>

        <h6>Items:</h6>
        <ul class="list-unstyled">
            <% order.items.forEach(item => { %>
            <li class="d-flex align-items-center mb-3">
                <img src="/uploads/product-imgs/<%= item.productId.productImage[0] %>" alt="<%= item.productId.productName %>" class="img-thumbnail" style="width: 100px; height: auto; margin-right: 15px;">
                <div>
                    <strong><%= item.productId.productName %></strong>
                    <div>Quantity: <%= item.quantity %></div>
                    <span>Total: <%= item.totalPrice %> $</span>
                </div>
            </li>
            <% }) %>
        </ul>

        <p><strong>Total Order Price: <%= order.totalOrderPrice %> $</strong></p>
    </div>
    <a href="/order/history" class="btn btn-secondary mt-4">Back to Order History</a>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
