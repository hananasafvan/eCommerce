<div class="container">
        <div class="products-list" >
            <% products.forEach(product => { %>
                <div class="product-item" >
                    

                    <% if (product.productImage && product.productImage.length > 0) { %>
                    <a href="/product/<%= product._id %>">
                        <img src="/uploads/product-imgs/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                    </a>
                        <% } else { %>
                        <img src="/uploads/product-imgs/no-image.jpg" alt="No image available">
                    <% } %>
                    <h3><%= product.productName %></3>

                    <p><%= product.regularPrice %>$</p>
                    <div class="star-rating">
                        <span class="star" data-value="1">&#9733;</span>
                        <span class="star" data-value="2">&#9733;</span>
                        <span class="star" data-value="3">&#9733;</span>
                        <span class="star" data-value="4">&#9733;</span>
                        <span class="star" data-value="5">&#9733;</span>
                        
                    </div>

                    <% if (product.quantity > 0) { %>
                        <a href="#" class="btn  add-to-cart" data-product-id="<%= product._id %>" style="margin-bottom: 10px;">
                            <i class="fas fa-shopping-cart"></i> 
                        </a>
                    <% } else { %>
                        <p class="out-of-stock">Out of Stock</p>
                    <% } %>
                    

                    <a href="" class="wishlist-btn" >
                        <i class="fas fa-heart" ></i>
                    </a>
            
                </div>
            <% }) %>
        </div>

        
    </div>
        
    <!-- </div> -->
    

    <div class="pagination-container">
        <% if (currentPage > 1) { %>
            <a href="?page=<%= currentPage - 1 %>&sortBy=<%= sortBy %>">&laquo; Previous</a>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
            <% if (i === currentPage) { %>
                <span class="current-page"><%= i %></span>
            <% } else { %>
                <a href="?page=<%= i %>&sortBy=<%= sortBy %>" class="<%= currentPage === i ? 'current-page' : '' %>"><%= i %></a>
            <% } %>
        <% } %>

        <% if (currentPage < totalPages) { %>
            <a href="?page=<%= currentPage + 1 %>&sortBy=<%= sortBy %>">Next &raquo;</a>
        <% } %>
    </div>
</div>

