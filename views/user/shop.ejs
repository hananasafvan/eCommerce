<%- include("../../views/partials/user/header") %>

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css"/>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif; /* Updated font */
        }

        h1 {
            text-align: center;
            margin: 20px 0;
            color: #333;
        }

        /* Centering the form */
        form {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        form input[type="text"], form select {
            padding: 10px;
            margin-right: 10px;
            border: 1px solid #e0e0e0;
            border-radius: 5px;
            width: 200px;
        }

        form button {
            padding: 10px 15px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        form button:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

        /* Container for the entire product list */
        .products-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            padding: 20px;
        }

        /* Individual product item styling */
        .product-item {
            background-color: #fff;
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 15px;
            width: 250px;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        /* Hover effects */
        .product-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Deeper shadow on hover */
        }

        /* Product title styling */
        .product-item h3 {
            font-size: 1.2rem;
            margin-bottom: 10px;
            color: #333;
        }

        /* Product image styling */
        .product-item img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 5px;
            margin-bottom: 15px;
        }

        /* Product price styling */
        .product-item p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 10px;
        }

        /* View details link styling */
        .product-item a {
            display: inline-block;
            text-decoration: none;
            background-color: #007bff;
            color: #fff;
            padding: 8px 12px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .product-item a:hover {
            background-color: #0056b3;
        }

        /* Out of stock styling */
        .out-of-stock {
            color: red;
            font-weight: bold;
        }

        /* Pagination container */
        .pagination-container {
            display: flex;
            justify-content: center;
            margin: 20px 0;
        }

        /* Style for each pagination link */
        .pagination-container a, .pagination-container span {
            display: inline-block;
            padding: 8px 16px;
            margin: 0 5px;
            text-decoration: none;
            color: #007bff;
            background-color: #f9f9f9;
            border: 1px solid #e0e0e0;
            border-radius: 5px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        /* Hover effect for links */
        .pagination-container a:hover {
            background-color: #007bff;
            color: #fff;
        }

        /* Style for the current page */
        .pagination-container .current-page {
            background-color: #007bff;
            color: white;
            border: 1px solid #007bff;
            cursor: default;
        }

        /* Disabled state for previous/next buttons */
        .pagination-container a.disabled {
            pointer-events: none;
            color: #999;
            background-color: #e0e0e0;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .product-item {
                width: 45%;
            }
        }

        @media (max-width: 480px) {
            .product-item {
                width: 100%;
            }
        }

        /* Responsive pagination for smaller screens */
        @media (max-width: 480px) {
            .pagination-container a, .pagination-container span {
                padding: 6px 12px;
                font-size: 14px;
            }
        }
    </style>
</head>

<h1>Shop</h1>

<form action="/shop" method="GET">
    <input type="text" name="searchQuery" placeholder="Search..." value="<%= searchQuery %>" />
    <select name="sortBy" onchange="this.form.submit()">
        <option value="">Sort By</option>
        <option value="popularity" <%= sortBy === 'popularity' ? 'selected' : '' %>>Popularity</option>
        <option value="priceLowToHigh" <%= sortBy === 'priceLowToHigh' ? 'selected' : '' %>>Price: Low to High</option>
        <option value="priceHighToLow" <%= sortBy === 'priceHighToLow' ? 'selected' : '' %>>Price: High to Low</option>
        <option value="averageRatings" <%= sortBy === 'averageRatings' ? 'selected' : '' %>>Average Ratings</option>
        <option value="featured" <%= sortBy === 'featured' ? 'selected' : '' %>>Featured</option>
        <option value="newArrivals" <%= sortBy === 'newArrivals' ? 'selected' : '' %>>New Arrivals</option>
        <option value="aToZ" <%= sortBy === 'aToZ' ? 'selected' : '' %>>A - Z</option>
        <option value="zToA" <%= sortBy === 'zToA' ? 'selected' : '' %>>Z - A</option>
    </select>
    <button type="submit">Search</button>
</form>

<div class="products-list">
    <% products.forEach(product => { %>
        <div class="product-item">
            <h3><%= product.productName %></h3>

            <% if (product.productImage && product.productImage.length > 0) { %>
                <img src="/uploads/product-imgs/<%= product.productImage[0] %>" alt="<%= product.productName %>">
            <% } else { %>
                <img src="/uploads/product-imgs/no-image.jpg" alt="No image available">
            <% } %>

            <p>Price: <%= product.regularPrice %>$</p>

            <% if (product.quantity > 0) { %>
                <a href="#" class="btn btn-primary add-to-cart" data-product-id="<%= product._id %>" style="margin-bottom: 10px;">
                    <i class="fas fa-shopping-cart"></i> Add to Cart
                </a>
            <% } else { %>
                <p class="out-of-stock">Out of Stock</p>
            <% } %>

            <a href="/product/<%= product._id %>">View Details</a>
        </div>
    <% }) %>
</div>

<div class="pagination-container">
    <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %>&sortBy=<%= sortBy %>">&laquo; Previous</a>
    <% } %>

    <% for (let i = 1; i <= totalPages; i++) { %>
        <% if (i === currentPage) { %>
            <span class="current-page"><%= i %></span>
        <% } else { %>
            <a href="?page=<%= i %>&sortBy=<%= sortBy %>"><%= i %></a>
        <% } %>
    <% } %>

    <% if (currentPage < totalPages) { %>
        <a href="?page=<%= currentPage + 1 %>&sortBy=<%= sortBy %>">Next &raquo;</a>
    <% } %>
</div>


