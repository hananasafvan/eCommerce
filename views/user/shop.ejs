    <%- include("../../views/partials/user/headerNew") %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css"/>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    
    <style>
        body {
            background-color: #f8f9fa;
            

        }

        h1, h3 {
            text-align: center;
            margin: 20px 0;
            color:#2c3e50;;
        }

        .container {
            width: 100%;
            display: flex;
            justify-content: space-between; 
            min-height: 500px;
            
        }

        /* Search and Sort Container */
        .search-container {
            
    display: flex;
    justify-content: flex-end; /* Aligns to the right */
    align-items: center;
    gap: 20px; /* Space between the elements */
    margin-bottom: 10px;
    padding: 0 50px;
    width: 90%;
    height: 50px;
        }

        form {
            display: flex;
            flex-direction: row; /* Stack search input and select vertically */
            gap: 10px; /* Add space between elements */
            align-items: center;
        }

        form input[type="text"], form select {
            padding: 8px 10px; /* Reduced padding for smaller size */
            border: 1px solid #ddd;
            border-radius: 5px; 
            width: 180px; 
            background-color: #fff;
            transition: all 0.3s ease;
            color: #555;
            font-size: 14px; 
        }

        form button {
            padding: 8px 12px; 
            background-color:#1f2d3d;
            color: #fff;
            border: none;
            border-radius: 5px; 
            cursor: pointer;
            transition: background-color 0.3s ease;
            font-size: 14px; 
            
        }

        form button:hover {
        background-color: #d35400; /* Darker blue on hover */
        }

        .products-list {
            margin-left: 25px;
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: flex-start; /* Align items to the left */
            padding: 20px;
            flex: 1; /* Allow products to take remaining space */
        }

        .product-item {
            background-color: #fff;
            border: none;
            border-radius: 15px;
            /* box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1); */
            padding: 20px;
            width: 300px;
            height: 450px;
            text-align: center;
            /* transition: transform 0.3s ease, box-shadow 0.3s ease; */
            position: relative;
        }

        .product-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

        .product-item h3 {
            font-size: 1.3rem;
            margin-bottom: 10px;
            color:#2c3e50 ;
        }

        .product-item img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 15px;
            transition: transform 0.3s ease;
        }

        .product-item:hover img {
            transform: scale(1.05);
        }

        .product-item p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 10px;
        }

        .product-item a {
            display: inline-block;
            text-decoration: none;
            background-color: transparent;
            color: #00131c;
            padding: 10px 15px;
            border: none;
            transition: background-color 0.3s ease;
        }

        .product-item a:hover {
           color: #034e70;
        }

        .out-of-stock {
            color: #ff4d4d;
            font-weight: bold;
        }

        .pagination-container {
            display: flex;
            justify-content: center;
            margin: 30px 0;
            gap: 5px;
        }

        .pagination-container a, .pagination-container span {
            display: inline-block;
            padding: 10px 15px;
            margin: 0 5px;
            text-decoration: none;
            color: #1f2d3d;
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 50px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .pagination-container a:hover {
            background-color: #1f2d3d;
    color: #fff;
        }

        .pagination-container .current-page {
            background-color:#00131c;
            color: white;
            border: none;
            cursor: default;
        }

        .pagination-container a.disabled {
            pointer-events: none;
            color: #999;
            background-color: #e0e0e0;
        }
        form select {
    padding: 8px 10px; /* Maintain smaller padding for uniformity */
    border: 1px solid #ddd;
    border-radius: 5px; /* Slightly rounded corners */
    width: 180px; /* Consistent width */
    background-color: #fff;
    transition: all 0.3s ease;
    color: #555;
    font-size: 14px; /* Smaller font size */
    margin-bottom: 10px; /* Add space below each dropdown */
}

.background-image {
    position: relative;
  width: 100%;
  height: 400px; /* Set the height of the div */
  background-image: url('img/breadcrumb-bg.jpg'); /* Specify the image path */
  background-size: cover; /* Cover the entire div */
  background-position: center; /* Center the image */
  background-repeat: no-repeat; /* Prevent image from repeating */
}
.breadcrumb-container{

    position: absolute; /* Position the text absolutely */
    margin-left: 10px;
    margin-top: 350px;
    width: 200px;
    /* transform: translate(-50%, -50%); Adjust for the width/height of the text */
    color: white; /* Text color */
    text-align: center; /* Center text */
    padding: 20px; /* Optional padding */
    background-color: transparent; /* Optional semi-transparent background */
    border-radius: 10px; /* Optional rounded corners */
}
.text{
    
  background-size: cover; /* Cover the entire div */
  background-position: center; /* Center the image */
  background-repeat: no-repeat;
  padding: 50px;
   
   margin-top: 0px; 
   border-radius: 20px;
   
   
}

.star-rating {
    font-size: 15px; /* Size of the stars */
    color: black; /* Black color for unselected stars */
    cursor: pointer; /* Change cursor to pointer */
}

.star {
    transition: color 0.2s ease; 
}




.star:nth-child(-n+3) {
    color: #ffcc00;
}

        
        @media (max-width: 768px) {
            .product-item {
                width: 48%;
            }

            .search-container {
                align-items: center; 
            }
        }

        @media (max-width: 480px) {
            .product-item {
                width: 100%;
            }

            form input[type="text"], form select {
                width: 100%; 
            }
        }
        @media (max-width: 768px) {
    .search-container {
        flex-direction: column; 
        align-items: flex-start;
    }
    form {
        flex-direction: column;
        width: 100%; 
    }

    form input[type="text"], form select {
