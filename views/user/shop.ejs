<div class="background-image" >
    
        <a href="/" class="breadcrumb-container">home / shop</a>
    
    
    </div>
</div>

    
        <div class="search-container" style="margin-top: 10px; ">
    <form action="/shop" method="GET">
        <input type="text"  name="searchQuery" placeholder="Search..." value="<%= searchQuery %>" />
        <select name="sortBy" onchange="this.form.submit()">
            <option value="">Sort By</option>
            <option value="popularity" <%= sortBy === 'popularity' ? 'selected' : '' %>>Popularity</option>
            <option value="priceLowToHigh" <%= sortBy === 'priceLowToHigh' ? 'selected' : '' %>>Price: Low to High</option>
            <option value="priceHighToLow" <%= sortBy === 'priceHighToLow' ? 'selected' : '' %>>Price: High to Low</option>
            <option value="averageRatings" <%= sortBy === 'averageRatings' ? 'selected' : '' %>>Average Ratings</option>
            <option value="featured" <%= sortBy === 'featured' ? 'selected' : '' %>>Featured</option>
            <option value="newArrivals" <%= sortBy === 'newArrivals' ? 'selected' : '' %>>New Arrivals</option>
            <option value="aToZ" <%= sortBy === 'aToZ' ? 'selected' : '' %>>A - Z</option>
            <option value="zToA" <%= sortBy === 'zToA' ? 'selected' : '' %>>Z - A</option>
        </select>

        <select name="category">
            <option value="">Select Category</option>
            <% categories.forEach(cat => { %>
              <option value="<%= cat._id %>" <%= category === cat._id ? 'selected' : '' %>><%= cat.name %></option>
            <% }) %>
          </select>
          
          
          

        <button type="submit">Search</button>
    </form>
    
</div>

        <div class="products-list" >
            
            <% products.forEach(product => { %>
                <div class="product-item" style="border:solid #1f2d3d 1px;" >
                    

                    <a href="#" class="wishlist-btn" data-product-id="<%= product._id %>" style="margin-right: 20px;">
                        <i class="fas fa-heart " style="margin-right: -200px;color: rgb(221, 16, 26);font-size: x-large;"></i>
                    </a>
            
                    <% if (product.productImage && product.productImage.length > 0) { %>
                    <a href="/product/<%= product._id %>">
                        <img src="/uploads/product-imgs/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                    </a>
                        <% } else { %>
                        <img src="/uploads/product-imgs/no-image.jpg" alt="No image available">
                    <% } %>
                    <h3 style="color: #1e316f;"><%= product.productName %></h3>
                     
                    <% if (product.salePrice < product.regularPrice) { %>
                        <p style="text-decoration: line-through; margin-bottom: 0.1px;color: #626a75;">&#8377; <%= product.regularPrice %> </p>
                        <p style="color: #07922a; margin-top: 1px;">&#8377; <%= product.salePrice %></p>
                    <% } else { %>
                        <p>&#8377; <%= product.regularPrice %></p>
                    <% } %>
                    
                    <div class="star-rating">
                        <span class="star" data-value="1">&#9733;</span>
                        <span class="star" data-value="2">&#9733;</span>
                        <span class="star" data-value="3">&#9733;</span>
                        <span class="star" data-value="4">&#9733;</span>
                        <span class="star" data-value="5">&#9733;</span>
                        
                    </div>

                  
                </div>
            <% }) %>
        </div>

        
    <!-- </div> -->
        
    <!-- </div> -->
    

    <div class="pagination-container">
        <% if (currentPage > 1) { %>
            <a href="?page=<%= currentPage - 1 %>&sortBy=<%= sortBy %>">&laquo; Previous</a>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
            <% if (i === currentPage) { %>
                <span class="current-page"><%= i %></span>
            <% } else { %>
                <a href="?page=<%= i %>&sortBy=<%= sortBy %>" class="<%= currentPage === i ? 'current-page' : '' %>"><%= i %></a>
            <% } %>
        <% } %>

        <% if (currentPage < totalPages) { %>
            <a href="?page=<%= currentPage + 1 %>&sortBy=<%= sortBy %>">Next &raquo;</a>
        <% } %>
        
    </div>
</div>

