<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Wishlist</title>
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <%- include("../../views/partials/user/headerNew") %>
</head>
<body>
  <div class="container mt-5" style="background-color:#00131c; margin-bottom: 50px; margin-top: 150px;">
    <div class="row" style="align-items: center;">
      <div class="col-lg-10 mx-auto">
        <h2 class="text-center mb-4" style="color: white;">Your Wishlist</h2>
        
        <% if (wishlistItems.length === 0) { %>
          <div class="alert alert-warning text-center">
            <strong>Your wishlist is empty!</strong>
          </div>
        <% } else { %>
          <div class="row">
            <!-- Wishlist Items Section -->
            <% wishlistItems.forEach(function(item) { %>
              <div class="col-md-8 mx-auto mb-4">
                <div class="card shadow-sm">
                  <div class="card-body">
                    <div class="row align-items-center">
                      <!-- Product Image -->
                      <div class="col-md-3 text-center">
                        <img src="/uploads/product-imgs/<%= item.productId.productImage[0] %>" alt="<%= item.productId.productName %>" class="img-fluid rounded">
                      </div>
                      <!-- Product Details -->
                      <div class="col-md-6">
                        <h5 class="card-title"><%= item.productId.productName %></h5>
                        <p class="text-muted">Price: &#8377;<%= item.productId.regularPrice %></p>
                      </div>
                      <!-- Action Buttons -->
                      <div class="col-md-3 text-end">
                        <a href="/product/<%= item.productId._id %>" class="btn btn-primary mb-2" style="background-color:#d35400; border: none;"><i class="bi bi-eye"></i> View</a>
                        <a href="/wishlist/remove/<%= item.productId._id %>" class="btn btn-outline-danger"><i class="bi bi-trash"></i> Remove</a>
                        <button class="btn btn-success add-to-cart" data-product-id="<%= item.productId._id %>">
                          <i class="fas fa-shopping-cart" style="color: white;"></i> Add to Cart
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  <%- include("../../views/partials/user/footer") %>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
  
  <script>
    $(document).ready(function() {
      // Add to Cart Functionality
      $(".add-to-cart").click(function(e) {
        e.preventDefault();
        const productId = $(this).data("product-id");

        $.ajax({
          url: '/cart/add',
          method: 'POST',
          data: { productId: productId },
          success: function(response) {
            Swal.fire('Added!', response.message, 'success');
          },
          error: function(error) {
            Swal.fire('Oops!', 'Something went wrong!', 'error');
          }
        });
      });
    });
  </script>
</body>
</html>
