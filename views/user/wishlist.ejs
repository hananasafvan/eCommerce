<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Wishlist</title>
    <link rel="stylesheet" href="/css/styles.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <%- include("../../views/partials/user/headerNew") %>
    <style>
      body{
        background-color: f4f4f9;
      }
    </style>
  </head>
  <body>
    <div
      class="container mt-5"
      style=" margin-bottom: 50px; margin-top: 150px"
    >
      <div class="row" style="align-items: center">
        <div class="col-lg-10 mx-auto">
          <h2 class="text-center mb-4" style="color: white">Your Wishlist</h2>

          <% if (wishlistItems.length === 0) { %>
          <div class="alert alert-warning text-center">
            <strong>Your wishlist is empty!</strong>
          </div>
          <% } else { %>
          <div class="row">
            <% wishlistItems.forEach(function(item) { %>
            <div class="col-md-8 mx-auto mb-4">
              <div class="card shadow-sm">
                <div class="card-body">
                  <div class="row align-items-center">
                    <div class="col-md-3 text-center">
                      <% if (item.productId.productImage && item.productId.productImage.length > 0) { %>
                        <a href="/product/<%= item.productId._id %>">
                          <img src="/uploads/product-imgs/<%= item.productId.productImage[0] %>" alt="<%= item.productId.productName %>">
                        </a>
                      <% } else { %>
                        <img src="/uploads/product-imgs/no-image.jpg" alt="No image available">
                      <% } %>
                      
                    </div>

                    <div class="col-md-6">
                      <h5 class="card-title">
                        <%= item.productId.productName %>
                      </h5>
                      <p class="text-muted">
                        Price: &#8377;<%= item.productId.regularPrice %>
                      </p>
                     
                    </div>

                    <div class="col-md-3 text-end">
                      <a
                        href="/product/<%= item.productId._id %>"
                        class="btn btn-primary mb-2"
                        style="background-color: #d35400; border: none"
                        ><i class="bi bi-eye"></i> View</a
                      >
                      <a
                        href="#"
                        class="btn btn-outline-danger"
                        data-product-id="<%= item.productId._id %>"
                      >
                        <i class="bi bi-trash"></i> Remove
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <%- include("../../views/partials/user/footer") %>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <script>
      $(document).ready(function () {
        $(".add-to-cart-wish").click(function (e) {
          e.preventDefault();
          const productId = $(this).data("product-id");

          if (!productId) {
            Swal.fire("Oops!", "Product ID is undefined!", "error");
            return;
          }

          $.ajax({
            url: "/cart/add",
            method: "POST",
            data: { productId: productId },
            success: function (response) {
              Swal.fire({
                title: "Added!",
                text: response.message,
                icon: "success",
                showConfirmButton: false,
                timer: 1500,
              });
              $(`[data-product-id='${productId}']`).hide();
            },
            error: function (xhr, status, error) {
              Swal.fire({
                title: "Oops!",
                text: xhr.responseJSON
                  ? xhr.responseJSON.message
                  : "Something went wrong!",
                icon: "error",
                showConfirmButton: false,
                timer: 1500,
              });
            },
          });
        });
      });

      $(document).ready(function () {
        // Handle Add to Cart from Wishlist
        $(".add-to-cart-wish").click(function (e) {
          e.preventDefault();
          const productId = $(this).data("product-id");

          if (!productId) {
            Swal.fire("Oops!", "Product ID is undefined!", "error");
            return;
          }

          $.ajax({
            url: "/cart/add",
            method: "POST",
            data: { productId: productId },
            success: function (response) {
              Swal.fire({
                title: "Added!",
                text: response.message,
                icon: "success",
                showConfirmButton: false,
                timer: 1500,
              });
              $(`[data-product-id='${productId}']`).hide();
            },
            error: function (xhr, status, error) {
              Swal.fire({
                title: "Oops!",
                text: xhr.responseJSON
                  ? xhr.responseJSON.message
                  : "Something went wrong!",
                icon: "error",
                showConfirmButton: false,
                timer: 1500,
              });
            },
          });
        });

        $(".btn-outline-danger").click(function (e) {
          e.preventDefault();
          const productId = $(this).data("product-id");

          if (!productId) {
            Swal.fire("Oops!", "Product ID is undefined!", "error");
            return;
          }

          $.ajax({
            url: `/wishlist/remove/${productId}`,
            method: "GET",
            success: function (response) {
              Swal.fire({
                title: "Removed!",
                text: response.message,
                icon: "success",
                showConfirmButton: false,
                timer: 1500,
              });

              $(`[data-product-id='${productId}']`).closest(".card").remove();
            },
            error: function (xhr, status, error) {
              Swal.fire({
                title: "Oops!",
                text: xhr.responseJSON
                  ? xhr.responseJSON.message
                  : "Something went wrong!",
                icon: "error",
                showConfirmButton: false,
                timer: 1500,
              });
            },
          });
        });
      });
    </script>
  </body>
</html>
