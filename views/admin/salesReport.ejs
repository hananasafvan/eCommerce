<body>
    <div class="container" style="text-align: center;">
        <h1>Sales Report</h1>
    
        <!-- Date range form -->
        <form action="/admin/salesReport" method="GET" style="display: inline-block; text-align: left;">
            <label for="dateRange">Select Date Range:</label>
            <select id="dateRange" name="dateRange" onchange="showCustomDateFields(this.value)" class="form-control">
                <option value="daily">Daily</option>
                <option value="weekly">Weekly</option>
                <option value="monthly">Monthly</option>
                <option value="yearly">Yearly</option>
                <option value="custom">Custom</option>
            </select>
            
           

            <div id="customDateFields" style="display:none;">
                <label for="startDate">Start Date:</label>
                <input type="date" id="startDate" name="startDate" class="form-control" max="">
                
                <label for="endDate">End Date:</label>
                <input type="date" id="endDate" name="endDate" class="form-control" max="">
            </div>

            <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Apply</button>
        </form>
    
        <!-- Sales Data Summary -->
        <div class="row mt-5">
            <div class="col">
                <h2>Total Orders</h2>
                <p><%= totalOrderCount %></p>
            </div>
            <div class="col">
                <h2>Total Sales (Before Discount)</h2>
                <p>₹<%= totalRevenue.toFixed(2) %></p>
            </div>
            <div class="col">
                <h2>Product Discount</h2>
                <p>₹<%= productDiscount.toFixed(2) || 0 %></p>
            </div>
            
        </div>
    
        <div class="row mt-5">
            <div class="col">
                <h2>Coupon Discount</h2>
                <p>₹<%= couponDiscount %></p>
            </div>
            
            <div class="col">
                <h2>Refund Amount</h2>
                <p>₹<%= totalReturndPrice || 0 %></p>
            </div>
            <div class="col">
                <h2>Net After Refunds</h2>
                <p>₹<%= (totalRevenue - totalReturndPrice).toFixed(2) || 0 %></p>
            </div>
        </div>
    
        <!-- Result Table -->
        <div class="container" style="text-align: center;">
            <h1>Sales Report</h1>
        
            
        
            <!-- Result Table with Pagination -->
            <h2 class="mt-5">Order Details</h2>
            <table id="orderTable" class="table table-striped table-bordered mt-3">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Username</th>
                        <th>Status</th>
                        <th>Product Name</th>
                        <th>Payment Method</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    <% result.forEach(item => { %>
                        <tr>
                            <td><%= item.orderId %></td>
                            <td><%= item.username %></td>
                            <td><%= item.status %></td>
                            <td><%= item.productName %></td>
                            <td><%= item.paymentMethod %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        
            <!-- Pagination Controls -->
            <div id="paginationControls" class="mt-3"></div>
        </div>
        <!-- Export buttons -->
        <div class="mt-5">
            <a href="/admin/download-pdf" class="btn btn-danger" style="height: 50px; width: 200px; border: none;">Download PDF</a>
            <a href="/admin/download-excel" class="btn btn-success" style="height: 50px; width: 200px; border: none;">Download Excel</a>
        </div>
    </div>
    
    <script>
        function showCustomDateFields(value) {
            if (value === 'custom') {
                document.getElementById('customDateFields').style.display = 'block';
            } else {
                document.getElementById('customDateFields').style.display = 'none';
            }
        }



        const today = new Date().toISOString().split('T')[0];
    document.getElementById('startDate').setAttribute('max', today);
    document.getElementById('endDate').setAttribute('max', today);

    function showCustomDateFields(value) {
        if (value === 'custom') {
            document.getElementById('customDateFields').style.display = 'block';
        } else {
            document.getElementById('customDateFields').style.display = 'none';
        }
    }



        const rowsPerPage = 10; // Number of rows per page
    let currentPage = 1;
    const tableBody = document.getElementById("tableBody");
    const rows = Array.from(tableBody.getElementsByTagName("tr"));
    const totalPages = Math.ceil(rows.length / rowsPerPage);
    const paginationControls = document.getElementById("paginationControls");

    // Function to display rows for the current page
    function displayPage(page) {
        tableBody.innerHTML = "";
        const start = (page - 1) * rowsPerPage;
        const end = start + rowsPerPage;
        rows.slice(start, end).forEach(row => tableBody.appendChild(row));

        updatePaginationControls(page);
    }

    // Function to create pagination buttons
    function updatePaginationControls(page) {
        paginationControls.innerHTML = "";

        for (let i = 1; i <= totalPages; i++) {
            const button = document.createElement("button");
            button.innerText = i;
            button.className = i === page ? "active" : "";
            button.onclick = () => displayPage(i);
            paginationControls.appendChild(button);
        }
    }

    // Initial display
    displayPage(currentPage);
            </script>
