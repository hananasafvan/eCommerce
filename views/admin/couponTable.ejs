<%- include("../../views/partials/admin/header") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coupon Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }
        .header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .header h2 {
            margin: 0;
        }
        .header .actions {
            display: flex;
            align-items: center;
        }
        .header .actions input {
            margin-right: 10px;
            padding: 5px;
        }
        .header .actions button {
            padding: 5px 10px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }
        .header .actions button:hover {
            background-color: #218838;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table th, table td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: center;
        }
        table th {
            background-color: #f1f1f1;
        }
        .actions button {
            padding: 5px;
            margin: 0 5px;
            cursor: pointer;
        }
        .actions .edit {
            background-color: #007bff;
            color: white;
        }
        .actions .delete {
            background-color: #dc3545;
            color: white;
        }
        .actions .edit:hover {
            background-color: #0056b3;
        }
        .actions .delete:hover {
            background-color: #c82333;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h2>Coupon Management</h2>
            <div class="actions">
                <input type="text" placeholder="Search coupon..." id="searchCoupon">
                <button id="createCouponBtn"><i class="fas fa-plus"></i><a href="/admin/addCoupon" style="color: white;"> Create Coupon</a></button>
            </div>
        </div>
        
        <table>
            <thead>
                <tr>
                    <th>Coupon <br>Code</th>
                    <th>Description</th>
                    <th>Discount <br>Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Discount Value</th>
                    <th>Min Purchase <br> Amount</th>
                    <th>Max Purchase <br> Amount</th>
                    <th>Usage <br> Limit</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <%cop.reverse().forEach((coupon, index) => {%>
                    <tr>
                        <td><%=coupon.code%></td>
                        <td><%=coupon.description%></td>
                        <td><%=coupon.discountType%></td>
                        <td><%=new Date(coupon.startDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })%></td>
                        <td><%=new Date(coupon.endDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })%></td>
                        <td><%=coupon.discountValue%></td>
                        <td><%=coupon. minPurchase%></td>
                        <td><%=coupon. maxPurchase%></td>
                        <td><%=coupon.usageLimit%></td>
                        <td><%=coupon.status%></td>
                        <td class="actions">
                            <button class="edit"><i class="fas fa-edit"></i> Edit</button>
                            <button class="delete"><i class="fas fa-trash-alt"></i> Delete</button>
                        </td>
                    </tr>
                    <%})%>
            </tbody>
        </table>
        <div class="pagination-container">
            <% if (currentPage > 1) { %>
            <a href="?page=<%= currentPage - 1 %>">&laquo; Previous</a>
            <% } %> <% for (let i = 1; i <= totalPages; i++) { %> <% if (i ===
            currentPage) { %>
            <span class="current-page"><%= i %></span>
            <% } else { %>
            <a href="?page=<%= i %>"><%= i %></a>
            <% } %> <% } %> <% if (currentPage < totalPages) { %>
            <a href="?page=<%= currentPage + 1 %>">Next &raquo;</a>
            <% } %>
          </div>
    </div>

    <script>
        

        function editCoupon(couponId) {
            window.location.href = '/admin/coupons/edit/' + couponId; // Redirect to edit page
        }

        function deleteCoupon(couponId) {
            if (confirm('Are you sure you want to delete this coupon?')) {
                // Send delete request to the server
                fetch('/admin/coupons/delete/' + couponId, { method: 'DELETE' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Coupon deleted successfully');
                            location.reload(); // Reload the page
                        } else {
                            alert('Failed to delete coupon');
                        }
                    });
            }
        }
    </script>
</body>
</html>



